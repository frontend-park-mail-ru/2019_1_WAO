<div class="scoreboard">
    {{> ../title/title.hbs title}}
    <div class="scoreboard__table">
        <div class="scoreboard__row scoreboard__head">
            <a class="scoreboard__row__col-1" data-href='#'>№</a>
            <a class="scoreboard__row__col-2" data-href='#'>Игрок</a>
            <a class="scoreboard__row__col-3" data-href='#'>Счёт</a>
            <a class="scoreboard__row__col-4" data-href='#'>Победы</a>
        </div>        
        {{#each users}}
            <div class="scoreboard__row">
                <a class="scoreboard__row__col-1" data-href='#'>N</a>
                <a class="scoreboard__row__col-2" data-href='/profile'>{{ this.nickname }}</a>
                <a class="scoreboard__row__col-3" data-href='#'>{{ this.score }}</a>
                <a class="scoreboard__row__col-4" data-href='#'>{{ this.wins }}/{{ this.games }}</a>
            </div>
        {{/each}}
    </div>
    <div class="scoreboard__paginator">
        <a class="scoreboard__paginator__prev" data-href='#'><<</a>
        <a class="scoreboard__paginator__next" data-href='#'>>></a>
    </div>
</div>